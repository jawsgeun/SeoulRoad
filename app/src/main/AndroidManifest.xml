<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kkard.seoulroad" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.kkard.seoulroad.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.kkard.seoulroad.LoginActivity"/>
        <activity android:name="com.kkard.seoulroad.FragmentActivity"
            android:theme="@style/MainTheme"
            />
        <activity android:name="com.kkard.seoulroad.RegistActivity"/>
        <activity android:name="com.kkard.seoulroad.MyMenu.NoticeActivity"/>
        </application>

</manifest>