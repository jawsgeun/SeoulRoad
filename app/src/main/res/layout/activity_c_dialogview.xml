<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/grey_rounded_back"
    tools:ignore="missingPrefix">
    <LinearLayout
        android:id="@+id/dialog_inside"
        android:layout_width="346dp"
        android:layout_height="377dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_back"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_back_green">
        <TextView
            android:id="@+id/dia_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            app:font="Regular"
            android:text="1 번째 방문자 입니다 !"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/dia_x_btn"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/x_btn"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">
            <ImageView
                android:id="@+id/green_bar"
                android:layout_width="3dp"
                android:layout_height="13dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/dia_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="Regular"
                android:layout_alignBottom="@id/green_bar"
                android:text="kan02188@naver.com"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:layout_toRightOf="@id/green_bar"
                android:layout_marginStart="7dp"/>
        <ImageView
            android:id="@+id/image_dialog"
            android:layout_width="325dp"
            android:layout_height="240dp"
            android:layout_below="@id/dia_id"
            android:layout_marginTop="2dp"
            android:src="@drawable/test_pager"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_below="@id/image_dialog">
            <ImageButton
                android:id="@+id/btn_heart"
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:background="@drawable/love_btn_black"
                android:layout_marginStart="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                app:font="Regular"
                android:text="좋아요"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/cnt_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                app:font="Regular"
                android:text="125명"
                android:layout_marginStart="3dp"
                android:layout_marginTop="1dp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2017.09.23"
                app:font="Regular"
                android:textSize="10dp"
                android:gravity="end"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/dia_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            app:font="Regular"
            android:text="야경이 진짜 이뻐요 ! 꼭 가보세요 !!!"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="2dp"
            android:textColor="@android:color/black"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>