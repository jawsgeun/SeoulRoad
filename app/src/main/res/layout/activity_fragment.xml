<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="right">
    <include layout="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <LinearLayout
        android:id="@+id/layout_right_drawer"
        android:orientation="vertical" android:layout_width="264dp"
        android:layout_height="match_parent" android:layout_gravity="right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
            <ImageView
                android:padding="10dp"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_circle_back"
                android:src="@drawable/logo_green" />
            <TextView
                android:id="@+id/drawer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:text="김세진"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/drawer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="22dp"
                android:text="kan02188@naver.com"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:paddingStart="17dp"
            android:paddingEnd="17dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_mywrite"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_write"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:text="내가 쓴 글"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_like"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_like"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:text="좋아요"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_pan"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:text="게시판"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_seting"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_modify"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:text="비밀번호 수정"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingStart="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/menu_mywrite"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/drawer_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="11dp"
                    android:text="로그아웃"
                    android:textSize="16dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#5500A24C"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>